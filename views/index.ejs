<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI-Powered Storytelling</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

    <!-- Typewriter -->
    <div class="container text-center mt-5">
      <div id="typewriter-container">
        <h1 id="typewriter"></h1>
      </div>
    </div>

    <!-- Language Dropdown -->
    <div class="container mt-3" id="languageSelector">
      <div class="row">
        <div class="col-md-12">
          <label for="languageSelect">Select a Language:</label>
          <select id="languageSelect" class="form-control">
            <option value="en">English</option>
            <option value="es">Spanish</option>
            <option value="fr">French</option>
            <option value="cn">Chinese</option>
            <option value="jp">Japanese</option>
            <option value="kr">Korean</option>
            <option value="vn">Vietnamese</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Hidden Container for Text-Input, Add to Sidebar Button, and Generate Button -->
    <div class="container mt-3" id="inputContainer" style="display: none;">
      <div class="row">
        <div class="col-md-4">
          <input type="text" id="userText" class="form-control" placeholder="Enter a word or phrase">
        </div>
        <div class="col-md-4">
          <button id="addToList" class="btn btn-primary btn-block">Add to List</button>
        </div>
      </div>
    </div>

    <!-- List Placeholder-->
    <div class="container mt-4">
      <div class="row">
        <div
          class="col-md-8">
          <!-- List content will be added here dynamically -->
          <div
            id="userWordList"><!-- Content will be added here -->
          </div>
        </div>
        <div class="col-md-3">
          <button id="generateButton" class="btn btn-success btn-block">Generate</button>
        </div>
      </div>
    </div>

    <!-- Add Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <!--Local Files-->
    <script src="/js/script.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
  </body>
</html>
